<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Wallet</title>
  <link rel="icon" href="/logo.jpeg" type="image/icon type">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
    }

    body {
      background-image: url("/1329272.png");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      padding: 40px 20px;
      /* Added breathing space around */
    }

    .wallet-container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 60px;
      max-width: 1000px;
      /* Wider container */
      width: 100%;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
      animation: slideIn 1s ease-out;
    }

    .wallet-header {
      text-align: center;
      margin-bottom: 40px;
    }

    .wallet-header h2 {
      font-size: 30px;
      color: #ffffff;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }

    .wallet-header .address {
      font-size: 15px;
      color: #ccc;
      margin-top: 8px;
    }

    .wallet-section {
      display: flex;
      justify-content: space-between;
      gap: 60px;
      margin-bottom: 40px;
    }

    .wallet-column {
      flex: 1;
      text-align: center;
    }

    .points,
    .gh-token {
      font-size: 24px;
      font-weight: 600;
      color: #fff;
      margin-bottom: 15px;
      text-shadow: 0 0 8px rgba(0, 255, 255, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }

    .gh-token img {
      height: 28px;
      vertical-align: middle;
    }

    #claimBtn {
      width: 100%;
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      border: none;
      padding: 18px 26px;
      border-radius: 12px;
      cursor: pointer;
      font-size: 18px;
      transition: 0.3s;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    #claimBtn i {
      margin-right: 8px;
    }

    #claimBtn:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    .activity {
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      padding-top: 50px;
    }

    .activity h3 {
      font-size: 20px;
      margin-bottom: 20px;
      color: #fff;
    }

    .transaction {
      display: flex;
      justify-content: space-between;
      padding: 20px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .transaction-type {
      font-weight: bold;
      font-size: 16px;
      color: #eee;
    }

    .transaction-amount {
      font-weight: bold;
      font-size: 16px;
      color: #00ffe0;
    }

    .transaction-amount.negative {
      color: #ff6868;
    }

    .timestamp {
      font-size: 13px;
      color: #bbb;
      margin-top: 4px;
    }

    @keyframes slideIn {
      from {
        transform: translateY(30px);
        opacity: 0;
      }

      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @media (max-width: 640px) {
      .wallet-actions {
        flex-direction: column;
      }
    }

    /* Modal Background */
    .modal {
      display: none;
      position: fixed;
      z-index: 9999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      backdrop-filter: blur(5px);
      background: rgba(0, 0, 0, 0.5);
    }

    /* Modal Content Box */
    .modal-content {
      background: rgba(255, 255, 255, 0.1);
      color: white;
      margin: 15% auto;
      padding: 30px;
      border-radius: 15px;
      width: 90%;
      max-width: 400px;
      text-align: center;
      backdrop-filter: blur(15px);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
    }

    /* Close Button */
    .close-btn {
      float: right;
      font-size: 24px;
      cursor: pointer;
      color: #fff;
    }

    /* Input Controls */
    .input-control {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 15px;
      margin-top: 20px;
    }

    .input-control button {
      padding: 10px 18px;
      font-size: 20px;
      font-weight: bold;
      border: none;
      border-radius: 10px;
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      cursor: pointer;
      transition: 0.2s;
    }

    .input-control button:hover {
      transform: scale(1.1);
    }

    .input-control input {
      width: 100px;
      font-size: 20px;
      text-align: center;
      border: none;
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.2);
      color: white;
      padding: 10px;
    }

    /* Confirm Button */
    .modal-buttons {
      margin-top: 30px;
    }

    .confirm-btn {
      padding: 12px 24px;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 10px;
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      cursor: pointer;
      transition: 0.3s;
    }

    .confirm-btn:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    .claim-btn-container {
      display: flex;
      justify-content: center;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <div class="wallet-container">
    <div class="wallet-header">
      <h2>My Wallet</h2>
      <div class="address">
        {{walletAddress}}
      </div>
    </div>
    <div class="wallet-section">
      <div class="wallet-column">
        <div class="points">
          Points: <strong>{{balance}}</strong>
        </div>
      </div>
      <div class="wallet-column">
        <div class="gh-token">
          <img src="/logo.png" alt="GitHelper Token">
          <span>GH Token: <strong>{{walletBalance}}</strong></span>
        </div>
        {{!-- <a href="/points/redeem"><button><i class="fas fa-hand-holding-usd"></i> Redeem</button></a> --}}
      </div>
    </div>
    <div class="claim-btn-container">
      <button id="claimBtn"><i class="fas fa-coins"></i> Claim</button>
    </div>
    <form id="point-form" action="/points/claim" method="POST" style="display: none;">
      <input type="hidden" name="pointsClaimed" id="pointsClaimed">
    </form>
    <!-- Claim Modal -->
    <div class="modal" id="claimModal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h3>Select how many points you'd like to claim</h3>
        <div class="input-control">
          <button onclick="changeAmount(-50)">-</button>
          <input type="number" id="claimAmount" value="50" readonly />
          <button onclick="changeAmount(50)">+</button>
        </div>
        <div class="modal-buttons">
          <button class="confirm-btn" onclick="confirmClaim()">Confirm</button>
        </div>
      </div>
    </div>
    <!-- <div class="activity">
      <h3>Activity</h3>
      <div class="transaction">
        <div>
          <div class="transaction-type">Sent</div>
          <div class="timestamp">Dec 11 • To: 0x58a...8d34</div>
        </div>
        <div class="transaction-amount negative">-3 ETH</div>
      </div>
      <div class="transaction">
        <div>
          <div class="transaction-type">Received</div>
          <div class="timestamp">Dec 10 • From: 0x123...9abc</div>
        </div>
        <div class="transaction-amount">+5 ETH</div>
      </div>
    </div>
  </div> -->
    <script>
      let currentBalance;

      // Open Modal on Claim button click
      document.getElementById('claimBtn').addEventListener('click', () => {
        document.getElementById('claimModal').style.display = 'block';
      });

      function closeModal() {
        document.getElementById('claimModal').style.display = 'none';
      }

      function changeAmount(amount) {
        const input = document.getElementById('claimAmount');
        let current = parseInt(input.value);
        let updated = current + amount;

        if (updated >= 100 && updated <= 1000) {
          input.value = updated;
        }
      }

      function confirmClaim() {
        const points = document.getElementById('claimAmount').value;
        if (currentBalance < points) {
          alert('Insufficient balance');
          return;
        }
        closeModal();
        document.getElementById("pointsClaimed").value = points;
        document.getElementById("point-form").submit();
      }

      // Optional: Close modal if user clicks outside
      window.onclick = function (event) {
        const modal = document.getElementById('claimModal');
        if (event.target == modal) {
          closeModal();
        }
      }

      document.addEventListener('DOMContentLoaded', () => {
        const claimBtn = document.getElementById('claimBtn');
        const balanceText = document.querySelector('.points strong');
        const claimingAmount = 50; // Set your claim threshold here

        currentBalance = parseInt(balanceText.textContent, 10);

        if (currentBalance < claimingAmount) {
          claimBtn.disabled = true;
          claimBtn.textContent = `You need at least ${claimingAmount} points to claim.`;
        }
      });
    </script>
</body>

</html>