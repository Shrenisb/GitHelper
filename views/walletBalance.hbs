<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Wallet</title>
  <link rel="icon" href="/logo.jpeg" type="image/icon type">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
    }

    body {
      background: url("/1329272.png") no-repeat center center fixed;
      background-size: cover;
      color: white;
      min-height: 100vh;
      padding-top: 100px;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
      background: transparent;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
    }

    .logo {
      display: flex;
      align-items: center;
    }

    .logo img {
      height: 40px;
      margin-right: 10px;
      transition: transform 0.3s ease;
    }

    .logo img:hover {
      transform: rotate(10deg) scale(1.1);
    }

    .logo span {
      font-size: 24px;
      font-weight: bold;
      letter-spacing: 2px;
      color: #fff;
      text-shadow: 0px 0px 5px rgba(255, 255, 255, 0.8);
    }

    .nav-buttons {
      display: flex;
      gap: 15px;
    }

    .nav-buttons a {
      display: inline-block;
      padding: 10px 20px;
      margin-left: 15px;
      background-image: linear-gradient(45deg, #6a11cb, #2575fc);
      color: #fff;
      text-decoration: none;
      border-radius: 25px;
      font-size: 16px;
      font-weight: bold;
      transition: background-image 0.3s ease, transform 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      position: relative;
    }

    .nav-buttons a::after {
      content: '';
      position: absolute;
      width: 0%;
      height: 2px;
      bottom: -5px;
      left: 0;
      background-color: #fff;
      transition: width 0.3s;
    }

    .nav-buttons a:hover::after {
      width: 100%;
    }

    .nav-buttons a:hover {
      background-image: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
    }

    .header-icon {
      font-size: 42px;
      color: #00ffe0;
      margin-bottom: 10px;
      text-shadow: 0 0 12px rgba(0, 255, 255, 0.5);
      animation: pulseGlow 2s infinite;
    }

    @keyframes pulseGlow {

      0%,
      100% {
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.4);
      }

      50% {
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
      }
    }

    .wallet-container {
      max-width: 900px;
      margin: auto;
      padding: 60px;
      background: rgba(255, 255, 255, 0.08);
      border-radius: 25px;
      backdrop-filter: blur(20px);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
      animation: fadeSlideUp 0.8s ease-out;
    }

    @keyframes fadeSlideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .wallet-header {
      text-align: center;
      margin-bottom: 50px;
    }

    .wallet-header h2 {
      font-size: 36px;
      color: #fff;
      text-shadow: 0 0 15px rgba(0, 255, 255, 0.4);
      animation: pulseGlow 3s infinite;
    }

    .wallet-header .address {
      font-size: 15px;
      color: #ccc;
      margin-top: 8px;
    }

    .wallet-section {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 40px;
      margin-bottom: 40px;
      animation: fadeSlideUp 1s ease-out;
    }

    .wallet-column {
      flex: 1;
      text-align: center;
      min-width: 250px;
    }

    .points,
    .gh-token {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
      color: #fff;
      text-shadow: 0 0 8px rgba(0, 255, 255, 0.4);
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 12px;
      background: rgba(255, 255, 255, 0.06);
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
      transition: transform 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .points::before,
    .gh-token::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at center, rgba(0, 255, 255, 0.15), transparent 70%);
      animation: floatPulse 4s infinite ease-in-out;
    }

    @keyframes floatPulse {

      0%,
      100% {
        transform: translate(0%, 0%);
      }

      50% {
        transform: translate(10%, 10%);
      }
    }

    .points:hover,
    .gh-token:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 35px rgba(0, 255, 255, 0.4);
    }

    .gh-token img {
      height: 28px;
    }

    #claimBtn {
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      border: none;
      padding: 16px 32px;
      border-radius: 12px;
      font-size: 18px;
      cursor: pointer;
      transition: 0.4s ease;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
      animation: floatBtn 3s ease-in-out infinite;
    }

    @keyframes floatBtn {

      0%,
      100% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-4px);
      }
    }

    #claimBtn i {
      margin-right: 8px;
    }

    #claimBtn:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    .claim-btn-container {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .activity {
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      padding-top: 50px;
    }

    .activity h3 {
      font-size: 20px;
      margin-bottom: 20px;
      color: #fff;
    }

    .transaction {
      display: flex;
      justify-content: space-between;
      padding: 20px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .transaction-type {
      font-weight: bold;
      font-size: 16px;
      color: #eee;
    }

    .transaction-amount {
      font-weight: bold;
      font-size: 16px;
      color: #00ffe0;
    }

    .transaction-amount.negative {
      color: #ff6868;
    }

    .timestamp {
      font-size: 13px;
      color: #bbb;
      margin-top: 4px;
    }

    @keyframes slideIn {
      from {
        transform: translateY(30px);
        opacity: 0;
      }

      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @media (max-width: 640px) {
      .wallet-actions {
        flex-direction: column;
      }
    }

    /* Modal Background */
    .modal {
      display: none;
      position: fixed;
      z-index: 100;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      backdrop-filter: blur(6px);
      background-color: rgba(0, 0, 0, 0.6);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background: rgba(255, 255, 255, 0.1);
      color: white;
      margin: 10% auto;
      padding: 35px 30px;
      border-radius: 20px;
      max-width: 400px;
      backdrop-filter: blur(20px);
      text-align: center;
      position: relative;
      box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
      animation: fadeInScale 0.4s ease-out;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    @keyframes fadeInScale {
      from {
        transform: scale(0.8);
        opacity: 0;
      }

      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .modal-content h3 {
      font-size: 20px;
      margin-bottom: 20px;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.4);
    }

    /* Close Button */
    .close-btn {
      position: absolute;
      right: 15px;
      top: 15px;
      font-size: 26px;
      color: #fff;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 50%;
      width: 32px;
      height: 32px;
      line-height: 32px;
      text-align: center;
      transition: transform 0.2s ease, background 0.3s;
    }

    .close-btn:hover {
      transform: scale(1.1);
      background: rgba(255, 255, 255, 0.3);
    }

    .input-control {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-top: 30px;
    }

    .input-control input {
      width: 100px;
      text-align: center;
      font-size: 20px;
      padding: 10px;
      border-radius: 10px;
      border: none;
      background: rgba(255, 255, 255, 0.2);
      color: white;
    }

    .input-control button {
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      padding: 10px 18px;
      border-radius: 10px;
      font-size: 18px;
      border: none;
      cursor: pointer;
      transition: 0.2s ease-in-out;
    }

    .input-control button:hover {
      transform: scale(1.1);
    }

    /* Confirm Button */
    .input-control button:hover {
      transform: scale(1.1);
    }

    .confirm-btn {
      margin-top: 30px;
      padding: 12px 24px;
      font-size: 16px;
      font-weight: bold;
      border-radius: 10px;
      border: none;
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .confirm-btn:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    @media (max-width: 768px) {
      .wallet-section {
        flex-direction: column;
        align-items: center;
      }

      .wallet-container {
        padding: 40px 30px;
      }
    }

    .divider {
      height: 2px;
      background: linear-gradient(to right, transparent, #00ffe0, transparent);
      margin: 40px 0;
      border-radius: 2px;
      animation: pulseDivider 2.5s ease-in-out infinite;
      box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
    }

    @keyframes pulseDivider {

      0%,
      100% {
        opacity: 0.5;
      }

      50% {
        opacity: 1;
      }
    }
  </style>
</head>

<body>
  <div class="navbar">
    <div class="logo">
      <a href="/"><img src="/logo.jpeg" alt="Git Helper Logo"></a>
      <span>Git Helper</span>
    </div>
    <div class="nav-buttons">
      <a href="/"><i class="fas fa-home"></i> Home</a>
      <a href="/api/user"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
  </div>
  <div class="wallet-container">
    <div class="wallet-header">
      <h2><i class="fas fa-wallet header-icon"></i> My Wallet</h2>
      <div class="address">
        {{walletAddress}}
      </div>
    </div>
    <div class="wallet-section">
      <div class="wallet-column">
        <div class="points">
          <i class="fas fa-star"></i> Points: <strong>{{balance}}</strong>
        </div>
      </div>
      <div class="wallet-column">
        <div class="gh-token">
          <i class="fas fa-coins"></i>
          <span>GH Token: <strong>{{walletBalance}}</strong></span>
        </div>
        {{!-- <a href="/points/redeem"><button><i class="fas fa-hand-holding-usd"></i> Redeem</button></a> --}}
      </div>
    </div>
    <div class="divider"></div>
    <div class="claim-btn-container">
      <button id="claimBtn"><i class="fas fa-coins"></i> Claim</button>
    </div>
    <form id="point-form" action="/points/claim" method="POST" style="display: none;">
      <input type="hidden" name="pointsClaimed" id="pointsClaimed">
    </form>
    <!-- Claim Modal -->
    <div class="modal" id="claimModal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h3>Select how many points you'd like to claim</h3>
        <div class="input-control">
          <button onclick="changeAmount(-50)">-</button>
          <input type="number" id="claimAmount" value="50" readonly />
          <button onclick="changeAmount(50)">+</button>
        </div>
        <div class="modal-buttons">
          <button class="confirm-btn" onclick="confirmClaim()">Confirm</button>
        </div>
      </div>
    </div>
    <!-- <div class="activity">
      <h3>Activity</h3>
      <div class="transaction">
        <div>
          <div class="transaction-type">Sent</div>
          <div class="timestamp">Dec 11 • To: 0x58a...8d34</div>
        </div>
        <div class="transaction-amount negative">-3 ETH</div>
      </div>
      <div class="transaction">
        <div>
          <div class="transaction-type">Received</div>
          <div class="timestamp">Dec 10 • From: 0x123...9abc</div>
        </div>
        <div class="transaction-amount">+5 ETH</div>
      </div>
    </div>
  </div> -->
    <script>
      let currentBalance;

      // Open Modal on Claim button click
      document.getElementById('claimBtn').addEventListener('click', () => {
        document.getElementById('claimModal').style.display = 'block';
      });

      function closeModal() {
        document.getElementById('claimModal').style.display = 'none';
      }

      function changeAmount(amount) {
        const input = document.getElementById('claimAmount');
        let current = parseInt(input.value);
        let updated = current + amount;

        if (updated >= 100 && updated <= 1000) {
          input.value = updated;
        }
      }

      function confirmClaim() {
        const points = document.getElementById('claimAmount').value;
        if (currentBalance < points) {
          alert('Insufficient balance');
          return;
        }
        closeModal();
        document.getElementById("pointsClaimed").value = points;
        document.getElementById("point-form").submit();
      }

      // Optional: Close modal if user clicks outside
      window.onclick = function (event) {
        const modal = document.getElementById('claimModal');
        if (event.target == modal) {
          closeModal();
        }
      }

      document.addEventListener('DOMContentLoaded', () => {
        const claimBtn = document.getElementById('claimBtn');
        const balanceText = document.querySelector('.points strong');
        const claimingAmount = 50; // Set your claim threshold here

        currentBalance = parseInt(balanceText.textContent, 10);

        if (currentBalance < claimingAmount) {
          claimBtn.disabled = true;
          claimBtn.textContent = `You need at least ${claimingAmount} points to claim.`;
        }
      });
    </script>
</body>

</html>