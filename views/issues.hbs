<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opened Queries</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}
    body {
      background-image: url("/Home1.jpg");
      background-repeat: no-repeat;
      background-position: center center;
      background-attachment: fixed;
      background-size: cover;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      
    }

    .issues-container {
      background: rgba(255, 255, 255, 0.1);
      padding: 40px;
      border-radius: 10px;
      backdrop-filter: blur(5px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 900px;
    }

    h2 {
      font-size: 28px;
      margin-bottom: 20px;
      color: white;
      text-align: center;
    }

    .issue-list {
      max-height: 500px;
      overflow-y: auto;
      margin-bottom: 20px;
    }

    .issue {
      padding: 20px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.2);
      position: relative;
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    .issue:last-child {
      border-bottom: none;
    }

    p {
      font-size: 16px;
      color: white;
      margin-bottom: 8px;
    }

    strong {
      font-weight: bold;
    }

    .edit-delete-buttons {
      position: absolute;
      top: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }

    .edit-button,
    .delete-button,
    .response-button {
      background-color: #6c5b7b;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .edit-button:hover,
    .delete-button:hover,
    .response-button:hover {
      background-color: #54466d;
    }

    .edit-button i,
    .delete-button i,
    .response-button i {
      margin-right: 5px;
    }

    #home-btn {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .btn {
      display: inline-block;
      padding: 12px 24px;
      background-color: #6c5b7b;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
      text-decoration: none;
      text-align: center;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #54466d;
    }

    #home-btn a {
      color: white;
      text-decoration: none;
      display: block;
      width: 100%;
    }
  </style>
</head>
<body>
  <div class="issues-container">
    <h2>Opened Queries</h2>
    <div class="issue-list">
      {{#if issues.length}}
        {{#each issues}}
          <div class="issue">
            <div class="edit-delete-buttons">
              <button class="edit-button" onclick="editQuery('{{_id}}')"> <i class="fas fa-edit"></i>Edit</button>

              <button class="delete-button" onclick="deleteQuery('{{_id}}')"><i class="fas fa-trash"></i>Delete</button>

              <button class="response-button" onclick="responseQuery('{{_id}}')"><i class="fas fa-comment"></i>Show Responses</button>
            </div>

            <p><strong>Skillset:</strong> {{skillset}}</p>
            <p><strong>GitHub ID:</strong> {{github_id}}</p>
            <p><strong>Repository Link:</strong> {{repo_link}}</p>
            <p><strong>Description:</strong> {{description}}</p>
          </div>
        {{/each}}
      {{else}}
        <p>No open queries found.</p>
      {{/if}}
      <div id="home-btn">
        <a href="/api/user" class="btn">Back To Dashboard</a>
      </div>
    </div>
  </div>

  <script>
    function editQuery(queryId) {      
      window.location.href = `/query_work/edit?queryId=${queryId}`;
    }

    function deleteQuery(queryId) {
      window.location.href = `/query_work/delete?queryId=${queryId}`;
    }

    function responseQuery(queryId) {
      window.location.href = `/query_work/response?queryId=${queryId}`;
    }
  </script>
</body>
</html>
