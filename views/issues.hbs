<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opened Queries</title>

  <!-- Favicon -->
  <link rel="icon" href="/logo.jpeg" type="image/icon type">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
    }

    body {
      background-image: url("/1329272.png");
      background-repeat: no-repeat;
      background-position: center center;
      background-attachment: fixed;
      background-size: cover;
      min-height: 100vh;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
    }

    /* Logo Styling */
    .logo-container {
      position: absolute;
      top: 20px;
      left: 20px;
      display: flex;
      align-items: center;
    }

    .logo-container img {
      height: 40px;
      margin-right: 10px;
      transition: transform 0.3s ease;
    }

    .logo-container img:hover {
      transform: rotate(10deg);
    }

    .logo-container span {
      font-size: 24px;
      font-weight: bold;
      letter-spacing: 2px;
      color: #fff;
      text-shadow: 0px 0px 5px rgba(255, 255, 255, 0.8);
    }

    /* Container Styling */
    .issues-container {
      background: rgba(255, 255, 255, 0.15);
      padding: 40px;
      border-radius: 12px;
      backdrop-filter: blur(8px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      width: 90%;
      max-width: 800px;
      max-height: 80vh;
      overflow-y: auto;
      animation: fadeIn 1.2s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h2 {
      font-size: 28px;
      margin-bottom: 25px;
      text-align: center;
      letter-spacing: 1px;
      font-weight: 700;
    }

    .issue-list {
      max-height: 65vh;
      overflow-y: auto;
      padding-right: 10px;
    }

    .issue {
      padding: 20px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.2);
      background: rgba(0, 0, 0, 0.6);
      border-radius: 10px;
      margin-bottom: 15px;
      position: relative;
      transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .issue:hover {
      transform: scale(1.02);
      background-color: rgba(0, 0, 0, 0.8);
    }

    p {
      font-size: 15px;
      margin-bottom: 8px;
    }

    strong {
      font-weight: bold;
    }

    a {
      color: #1e90ff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
      color: #ff8a00;
    }

    /* Buttons Styling */
    .edit-delete-buttons {
      position: absolute;
      top: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }

    .edit-button,
    .delete-button,
    .response-button {
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      border: none;
      padding: 10px;
      border-radius: 20px;
      cursor: pointer;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 6px;
      transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .edit-button:hover,
    .delete-button:hover,
    .response-button:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    .edit-button i,
    .delete-button i,
    .response-button i {
      margin-right: 5px;
    }

    /* Back Button */
    #home-btn {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .btn {
      display: inline-block;
      padding: 12px 24px;
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: white;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      cursor: pointer;
      text-decoration: none;
      text-align: center;
      transition: background 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
      background: linear-gradient(45deg, #5d09b1, #1f65e3);
      transform: scale(1.05);
    }

    #home-btn a {
      color: white;
      text-decoration: none;
      display: block;
      width: 100%;
    }
  </style>
</head>
<body>
  <!-- Logo and Header -->
  <div class="logo-container">
    <img src="/logo.jpeg" alt="Logo">
    <span>Git Helper</span>
  </div>

  <!-- Main Issues Container -->
  <div class="issues-container">
    <h2>Opened Queries</h2>
    <div class="issue-list">
      {{#if issues.length}}
        {{#each issues}}
          <div class="issue">
            <div class="edit-delete-buttons">
              <button class="edit-button" onclick="editQuery('{{_id}}')"> 
                <i class="fas fa-edit"></i>Edit
              </button>
              <button class="delete-button" onclick="deleteQuery('{{_id}}')">
                <i class="fas fa-trash"></i>Delete
              </button>
              <button class="response-button" onclick="responseQuery('{{_id}}')">
                <i class="fas fa-comment"></i>Show Responses
              </button>
            </div>
            <p><strong>Skillset:</strong> {{skillset}}</p>
            <p><strong>GitHub ID:</strong> {{github_id}}</p>
            <p><strong>Repository Link:</strong> <a href="{{repo_link}}" target="_blank"><i class="fas fa-external-link-alt"></i>{{repo_link}}</a></p>
            <p><strong>Description:</strong> {{description}}</p>
          </div>
        {{/each}}
      {{else}}
        <p>No open queries found.</p>
      {{/if}}
    </div>

    <div id="home-btn">
      <a href="/api/user" class="btn">Back To Dashboard</a>
    </div>
  </div>

  <!-- Script Functions -->
  <script>
    function editQuery(queryId) {      
      window.location.href = `/query_work/edit?queryId=${queryId}`;
    }

    function deleteQuery(queryId) {
      window.location.href = `/query_work/delete?queryId=${queryId}`;
    }

    function responseQuery(queryId) {
      window.location.href = `/query_work/response?queryId=${queryId}`;
    }
  </script>
</body>
</html>


