<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Open Query</title>

    <link rel="icon" href="/logo.jpeg" type="image/icon type">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>

    * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}
    body {
      background-image: url("/Home1.jpg");
      background-repeat: no-repeat;
      background-position: center center;
      background-attachment: fixed;
      background-size: cover;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .form-container {
      background: rgba(255, 255, 255, 0.1);
      padding: 40px;
      border-radius: 10px;
      backdrop-filter: blur(5px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 500px;
    }

    h2 {
      font-size: 28px;
      margin-bottom: 20px;
      color: white;
      text-align: center;
    }

    .form-group {
      margin-bottom: 20px;
    position: relative;
    }

    .form-group label {
    color: white;
    font-size: 14px;
    margin-bottom: 5px;
    display: block;
}

 .form-group input, .form-group textarea {
      width: 100%;
      padding: 12px;
      padding-left: 60px; /* Add padding to leave space for the icon */
      font-size: 14px;
      border: none;
      border-radius: 6px;
      outline: none;
      background: rgba(255, 255, 255, 0.2);
      color: white;
    }

    .form-group input::placeholder, .form-group textarea::placeholder {
      color: rgba(255, 255, 255, 0.7);
      font-family: 'Roboto', sans-serif;
    }

    .form-group i {
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.7);
    }

     /* Partition line between icon and input field */
    .form-group::before {
      content: '';
      position: absolute;
      left: 40px;
      top: 50%;
      transform: translateY(-50%);
      width: 1px;
      height: 60%;
      background-color: rgba(255, 255, 255, 0.5);
    }
    button {
      width: 100%;
      padding: 12px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    textarea {
      height: 100px;
      resize: vertical;
    }

    .error-message {
      color: red;
      margin-top: 10px;
      font-size: 14px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Open Query</h2>
    <form id="issue-form" action="/query/save" method="post" onsubmit="return validateForm()">

      <div class="form-group"><i class="fas fa-phone-alt"></i>
        <input type="tel" id="contact_info" placeholder="Contact Info" name="contact_info" required>
      </div>

      <div class="form-group"><i class="fas fa-tools"></i>
        <input type="text" id="skillset" placeholder="Skill Set" name="skillset" required>
      </div>

      <div class="form-group"><i class="fab fa-github"></i>
        <input type="text" id="github_id" placeholder="GitHub ID" name="github_id" required>
      </div>

      <div class="form-group"><i class="fas fa-link"></i>
        <input type="text" id="repo_link" placeholder="Repository Link" name="repo_link" required>
        <input type="text" id="id" name="id" value="{{_id}}" required hidden readonly>
      </div>

      <div class="form-group"><i class="fas fa-align-left"></i>
        <textarea id="description" placeholder="Description" name="description" required></textarea>
      </div>

      <button type="submit">Submit Query</button>
    </form>
    <p id="error-message" class="error-message"></p>
  </div>

  <script>
function validateForm() {
  var repoLink = document.getElementById('repo_link').value;
  var repoRegex = /^(https?:\/\/)?(www\.)?github\.com\/[a-zA-Z0-9-]+\/[a-zA-Z0-9-_]+(\/)?$/;
  if (!repoRegex.test(repoLink)) {
    document.getElementById("error-message").innerText = "Please enter a valid GitHub repository link.";
    return false;
  }

  var contactInfo = document.getElementById('contact_info').value;
  var phoneNumberDigitsOnly = contactInfo.replace(/\D/g, '');
  var phoneIdRegex = /^[0-9]{10}$/;
  if (!phoneIdRegex.test(phoneNumberDigitsOnly)) {
    document.getElementById("error-message").innerText = "Contact info should contain exactly 10 digits.";
    return false;
  }

  var githubId = document.getElementById('github_id').value;
  var githubIdRegex = /^[a-zA-Z0-9-]{1,39}$/;
  if (!githubIdRegex.test(githubId)) {
    document.getElementById("error-message").innerText = "Invalid GitHub ID.";
    return false;
  }

  var skillset = document.getElementById('skillset').value;
  var skillsetRegex = /^[a-zA-Z0-9,.\s]+$/;
  if (!skillsetRegex.test(skillset)) {
    document.getElementById("error-message").innerText = "Skill Set can only contain letters, numbers, commas, periods, and spaces.";
    return false;
  }

  var description = document.getElementById('description').value;
  var descriptionRegex = /^[a-zA-Z0-9.,!?;:\s]+$/;
  if (!descriptionRegex.test(description)) {
    document.getElementById("error-message").innerText = "Description can only contain letters, numbers, and standard punctuation.";
    return false;
  }

  document.getElementById("error-message").innerText = "";
  return true;
}

  </script>
</body>
</html>
