<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="icon" href="/logo.jpeg" type="image/icon type">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-image: url("/Home1.jpg");
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            backdrop-filter: brightness(0.8);
            color: #f0f0f0;
        }

        /* Container to Center Everything */
        .container {
            background: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.1);
            text-align: center;
            width: 450px;
        }

        h1 {
            margin-bottom: 20px;
        }

        /* Tabs */
        .tab-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .tab {
            background-color: #444;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .tab.active {
            background-color: #007bff;
            color: black;
            font-weight: bold;
        }

        /* Leaderboard Sections */
        .leaderboard-section {
            display: none;
        }

        .leaderboard-section.active {
            display: block;
        }

        /* Top 3 Users */
        .top-three {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            /* Ensures same baseline */
            margin-bottom: 20px;
        }

        /* User Containers */
        .user {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #2a2a3c;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        /* Container Sizes */
        .first {
            height: 170px;
            width: 130px;
        }

        /* ðŸ¥‡ 1st - Tallest */
        .second {
            height: 150px;
            width: 110px;
        }

        /* ðŸ¥ˆ 2nd - Medium */
        .third {
            height: 130px;
            width: 100px;
        }

        /* ðŸ¥‰ 3rd - Shortest */
        /* Profile Pictures */
        .user img {
            border-radius: 50%;
            margin-bottom: 8px;
            /* Creates spacing below the pfp */
        }

        .first img {
            height: 90px;
            width: 90px;
        }

        /* ðŸ¥‡ 1st - Largest */
        .second img {
            height: 75px;
            width: 75px;
        }

        /* ðŸ¥ˆ 2nd - Medium */
        .third img {
            height: 60px;
            width: 60px;
        }

        /* ðŸ¥‰ 3rd - Smallest */
        /* Name & Score */
        .user p {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 4px;
        }

        .user span {
            font-size: 14px;
            color: #ffd700;
        }

        /* Rest 7 Contributors */
        .rank-list {
            background-color: #2a2a3c;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
        }

        .rank-list p {
            text-align: left;
            margin-left: 10px;
        }

        .rank {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #444;
        }

        .rank:last-child {
            border-bottom: none;
        }

        .rank img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .rank p {
            flex-grow: 1;
            font-size: 16px;
        }

        .rank span {
            font-weight: bold;
            color: #007bff;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Leaderboard</h1>
        <!-- Toggle Buttons -->
        <div class="tab-container">
            <div class="tab active" onclick="showLeaderboard('all-time')">Top 10 Contributors of All Time</div>
            <div class="tab" onclick="showLeaderboard('upcoming')">Top 10 Upcoming Contributors</div>
        </div>
        <!-- Top 10 Contributors of All Time -->
        <div id="all-time" class="leaderboard-section active">
            <div class="top-three">
                {{#each topTenAll}}
                    {{#ifCond @index 0}}
                        <div class="user first">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}} <i class="fas fa-crown"></i></p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                    {{#ifCond @index 1}}
                        <div class="user second">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                    {{#ifCond @index 2}}
                        <div class="user third">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                {{/each}}
            </div>
            <div class="rank-list">
                {{#each topTenAll}}
                    {{#ifCondGTE @index 3}}
                        <div class="rank">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCondGTE}}
                {{/each}}
            </div>
        </div>
        <!-- Top 10 Upcoming Contributors -->
        <div id="upcoming" class="leaderboard-section">
            <div class="top-three">
                {{#each topTenUpcoming}}
                    {{#ifCond @index 0}}
                        <div class="user first">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}} <i class="fas fa-crown"></i></p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                    {{#ifCond @index 1}}
                        <div class="user second">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                    {{#ifCond @index 2}}
                        <div class="user third">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCond}}
                {{/each}}
            </div>
            <div class="rank-list">
                {{#each topTenUpcoming}}
                    {{#ifCondGTE @index 3}}
                        <div class="rank">
                            <img src="/pfp.jpeg" alt="{{this.username}}">
                            <a href="/error/profile/{{this.username}}">
                                <p>{{this.username}}</p>
                            </a>
                            <span>{{this.total_points}}</span>
                        </div>
                    {{/ifCondGTE}}
                {{/each}}
            </div>
        </div>
    </div>
    <script>
        function showLeaderboard(type) {
            document.querySelectorAll('.leaderboard-section').forEach(section => {
                section.classList.remove('active');
            });

            document.getElementById(type).classList.add('active');

            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });

            event.target.classList.add('active');
        }
    </script>
</body>

</html>