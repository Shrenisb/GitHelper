{{! Admin - View Reports Template }}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - View Reports</title>
    <link rel="icon" href="/logo.jpeg" type="image/icon type">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
    }

        body {
      background: url("/image.jpg") no-repeat center center fixed;
      background-size: cover;
      color: #fff;
      padding: 40px 20px;
    }

        .container {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      padding: 40px;
      max-width: 1200px;
      margin: auto;
      backdrop-filter: blur(15px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
      animation: fadeIn 0.7s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

        h1 {
      text-align: center;
      font-size: 32px;
      margin-bottom: 30px;
      color: #f5d8b3;
      text-shadow: 2px 2px #1c3879;
    }

    .search-bar {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 20px;
      margin-bottom: 30px;
    }

    .search-bar input,
    .search-bar select {
      flex: 1;
      min-width: 200px;
      padding: 12px 15px;
      border-radius: 10px;
      border: none;
      outline: none;
      font-size: 16px;
      background: rgba(255, 255, 255, 0.85);
      color: #333;
      transition: box-shadow 0.3s ease;
    }

    .search-bar input:focus,
    .search-bar select:focus {
      box-shadow: 0 0 8px rgba(245, 216, 179, 0.8);
    }

        .table-container {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 15px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.95);
      color: #333;
    }

        th, td {
      padding: 16px;
      text-align: left;
      border-bottom: 1px solid #ccc;
    }

    th {
      background: linear-gradient(to right, #1c3879, #3a5ba0);
      color: white;
    }

        tr:hover {
      background: rgba(245, 216, 179, 0.2);
    }

    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 8px;
    }

        .btn {
      padding: 8px 14px;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      font-size: 14px;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn:hover {
      transform: scale(1.05);
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

        .approve {
      background: linear-gradient(to right, #28a745, #42d36b);
      color: white;
    }

    .reject {
      background: linear-gradient(to right, #dc3545, #f26175);
      color: white;
    }

    .delete {
      background: linear-gradient(to right, #f5d8b3, #e6c194);
      color: #1c3879;
    }

        .no-issues {
      text-align: center;
      font-size: 20px;
      color: white;
      margin: 30px 0;
    }

    a.proof-link {
      color: #1c3879;
      text-decoration: underline;
      font-weight: bold;
    }

    #back-btn {
      text-align: center;
      margin-top: 30px;
    }

    #back-btn a {
      padding: 12px 26px;
      border-radius: 12px;
      text-decoration: none;
      background: linear-gradient(to right, #f5d8b3, #ebcfa7);
      color: #1c3879;
      font-weight: bold;
      display: inline-flex;
      align-items: center;
      transition: all 0.3s ease;
    }

    #back-btn a:hover {
      background: linear-gradient(to right, #f0cfa2, #e0b78a);
    }

    </style>
</head>

<body>
    <div class="container">
        <h1><i class="fas fa-exclamation-triangle"></i> Admin - View Reports</h1>
        {{#if reports.length}}
            <div class="search-bar">
                <input type="text" id="searchUser" placeholder="Search by Username...">
                <select id="filterViolation">
                    <option value="">Filter by Violation</option>
                    <option value="impersonation">Impersonation</option>
                    <option value="spam">Spam</option>
                    <option value="self-harm">Self-harm</option>
                    <option value="illegal">Illegal Activity</option>
                    <option value="adult">18+ Content</option>
                    <option value="hate">Hate Speech</option>
                    <option value="harassment">Bullying</option>
                    <option value="violence">Violence</option>
                    <option value="scam">Scam</option>
                    <option value="misinformation">False Information</option>
                    <option value="privacy">Privacy Violation</option>
                </select>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Reported User</th>
                            <th>Violation Type</th>
                            <th>Description</th>
                            <th>Proof</th>
                            <th>Reported By</th>
                            <th>Date</th>
                            <th hidden>ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reports}}
                            <tr>
                                <td>{{this.createdAgainst.username}}</td>
                                <td>{{this.type}}</td>
                                <td>{{this.description}}</td>
                                <td>
                                    <a href="{{this.proofUrl}}" target="_blank"
                                        style="color: #1c3879; text-decoration: underline;">View Proof</a>
                                </td>
                                <td>{{this.createdBy.username}}</td>
                                <td>{{this.createdAt}}</td>
                                <td>
                                    <form method="POST" action="/admin/closeReport">
                                        <input type="text" readonly hidden required name="reportId"
                                            value="{{this._id}}">
                                        <div class="action-buttons">
                                            <button type="submit" class="btn approve">
                                                <i class="fas fa-check"></i> Close
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
        {{else}}
            <p class="no-issues">No responses found.</p>
        {{/if}}
        <div id="back-btn">
            <a href="/admin/home"><i class="fas fa-arrow-left"></i>  Back to Dashboard</a>
        </div>
    </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchUser = document.getElementById("searchUser");
            const filterViolation = document.getElementById("filterViolation");
            const tableRows = document.querySelectorAll("tbody tr");

            function filterTable() {
                const searchText = searchUser.value.toLowerCase();
                const selectedViolation = filterViolation.value.toLowerCase();

                tableRows.forEach(row => {
                    const username = row.children[0].textContent.toLowerCase();
                    const violationType = row.children[1].textContent.toLowerCase();

                    const matchesSearch = searchText === "" || username.includes(searchText);
                    const matchesFilter = selectedViolation === "" || violationType.includes(selectedViolation);

                    if (matchesSearch && matchesFilter) {
                        row.style.display = "table-row";
                    } else {
                        row.style.display = "none";
                    }
                });
            }

            searchUser.addEventListener("input", filterTable);
            filterViolation.addEventListener("change", filterTable);
        });
    </script>
</body>

</html>